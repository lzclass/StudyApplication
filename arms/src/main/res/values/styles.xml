<resources>

    <style name="BaseTheme" parent="android:Theme.Light.NoTitleBar" />

    <style name="ImageSelectorTheme" parent="BaseTheme" />

    <style name="ImageShowTheme" parent="android:Theme.NoTitleBar.Fullscreen"></style>
    <!-- gif 相关属性 -->
    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>
    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
